<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/layout_activity_add_geo_fence"
    tools:context="com.who.daola.AddFenceActivity">

    <TextView
        android:text="@string/geofence_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_label"
        android:layout_alignBottom="@+id/name_edittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_edittext"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/name_label" />

    <TextView
        android:text="@string/geofence_radius_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radius_label"
        android:layout_alignBottom="@+id/radius_edittext"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/radius_edittext"
        android:layout_below="@+id/name_edittext"
        android:layout_toRightOf="@+id/radius_label" />

    <TextView
        android:text="@string/geofence_long_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longitude_label"
        android:layout_alignBottom="@+id/longitude_edittext"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/longitude_edittext"
        android:layout_below="@+id/radius_edittext"
        android:layout_toRightOf="@+id/longitude_label"
        android:enabled="false"
        android:editable="false" />

    <TextView
        android:text="@string/geofence_lat_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/latitude_label"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/latitude_textedit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/latitude_textedit"
        android:layout_below="@+id/longitude_edittext"
        android:layout_toRightOf="@+id/latitude_label"
        android:enabled="false"
        android:editable="false"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/latitude_textedit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="com.who.daola.FenceEditFragment"
            android:id="@+id/fragment2"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>
